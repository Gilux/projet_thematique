<table>
    <thead>
    <tr>
        <th>UE</th>
        <th>Enseignant</th>
        <th>Nom du devoir</th>
        <th>Groupe</th>
        <th>Date de rendu</th>
        <th>Statut</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    {% for devoir in data %}
        <tr>
            <td>
                {{ devoir.ue }}
            </td>
            <td>
                {{ devoir.user.firstName }} {{ devoir.user.lastName }}
            </td>
            <td>
                {{ devoir.titre }}
            </td>
            <td>
                {% for groupe in devoir.groupe %}
                    Groupe {{ groupe.name }}
                {% endfor %}
            </td>
            <td>
                {{ devoir.date_rendu|date("d/m/Y H:i") }}
            </td>
            <td>
                {% if devoir.date_rendu_file %}
                    <span class="badge success">Rendu le {{ devoir.date_rendu_file|date("d/m/Y H:i") }}</span>
                {% else %}
                    Non rendu
                {% endif %}
            </td>
            <td>
                <a href="{{ path("show_devoir", {'devoir': devoir.id} ) }}">DÃ©tails</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>