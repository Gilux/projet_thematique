{% extends "base.html.twig" %}

{% block javascripts %}
    <script src="{{ asset("vendor/ckeditor/ckeditor.js") }}"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function(e){
            CKEDITOR.replace( "description" )
        })
    </script>
{% endblock %}


{% block main %}
    <div class="container">
        <form>
            <div class="row">
                <div class="col-xs-12">
                    <h1>Créer un nouveau devoir</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="item">
                        <h3>Informations générales du devoir</h3>
                        <div class="form-group">
                            <label for="nom">Nom</label>
                            <input type="text" class="form-control" id="nom" placeholder="Nom du devoir">
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="" name="groupes">
                                    Ce devoir est à rendre par groupes
                                </label>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <span class="col-md-3 control-label">Configuration des groupes</span>
                                <div class="col-md-9">
                                    <div class="form-group row">
                                        <label for="inputKey" class="col-md-1 control-label">Minimum</label>
                                        <div class="col-md-2">
                                            <input type="number" class="form-control" id="inputKey" value="3">
                                        </div>
                                        <label for="inputValue" class="col-md-1 control-label">Maximum</label>
                                        <div class="col-md-2">
                                            <input type="number" class="form-control" id="inputValue" value="5">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-5 col-left">
                    <div class="item">
                        <h3>Groupes d'étudiants concernés et rendus</h3>
                        <div class="form-group">
                            <label for="ue">UE :</label>
                            <select name="ue" id="ue" value="option2">
                                <option value="1">ASI</option>
                                <option value="2">ASI2</option>
                                <option value="3">ASI Avancé</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label>
                                                <input type="checkbox" value="" name="groupes">
                                                GR1
                                            </label>
                                        </div>

                                        <label for="inputValue" class="col-md-3 control-label text-right">rendu :</label>
                                        <div class="col-md-3">
                                            <input type="date" class="form-control" id="inputValue"
                                                   placeholder="Value">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label>
                                                <input type="checkbox" value="" name="groupes">
                                                GR2
                                            </label>
                                        </div>

                                        <label for="inputValue" class="col-md-3 control-label text-right">rendu :</label>
                                        <div class="col-md-3">
                                            <input type="date" class="form-control" id="inputValue"
                                                   placeholder="Value">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label>
                                                <input type="checkbox" value="" name="groupes">
                                                GR3
                                            </label>
                                        </div>

                                        <label for="inputValue" class="col-md-3 control-label text-right">rendu :</label>
                                        <div class="col-md-3">
                                            <input type="date" class="form-control" id="inputValue"
                                                   placeholder="Value">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                    <div class="item">
                        <h3>Description</h3>
                        <div class="form-group">
                            <textarea id="description">

                            </textarea>
                        </div>

                    </div>
                </div>

                <div class="col-xs-7 col-right">
                    <div class="item">
                        <h3>Consignes et documents</h3>
                        <p id="dropzone">
                            Déposer votre fichier ici
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <input type="submit" class="btn btn-primary pull-right" id="_submit" name="_submit" value="Enregistrer" />.
                </div>
            </div>
        </form>

    </div>

{% endblock %}