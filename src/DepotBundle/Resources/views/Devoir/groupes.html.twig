<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <div class="col-md-3">
                <label>
                    {% if checked == true %}
                        <input type="checkbox" checked="checked" name="groupes[{{ it }}][id][{{ id }}]">
                    {% else %}
                        <input type="checkbox" name="groupes[{{ it }}][id][{{ id }}]">
                    {% endif %}
                    {{ name }}
                    </label>
                </div>
            <label for="inputValue" class="col-md-3 control-label text-right">rendu :</label>
            <div class="col-md-3">
                {% if date_a_rendre == false %}
                    <input type="date" class="form-control" id="inputValue" placeholder="Value" name="groupes[{{ it }}][date]">
                {% else %}
                    <input type="date" class="form-control" id="inputValue" placeholder="Value" value="{{ date_a_rendre|date("Y-m-d") }}" name="groupes[{{ it }}][date]">
                {% endif %}
            </div>
        </div>
    </div>
</div>