{% trans_default_domain 'FOSUserBundle' %}

{% extends "base.html.twig" %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Modifier les options de mon profil</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="item">
                    <h3>
                        Profil
                        <small><a class="btn btn-primary" href="{{ path('user_edit') }}" >Modifier</a></small>
                    </h3>
                    <a class="btn btn-primary pull-right" href="{{ path('fos_user_change_password') }}" >Modifier votre mot de passe</a>
                    <p><strong>{{ 'profile.show.username'|trans }} :</strong> {{user.username}}</p>
                    <p><strong>Nom :</strong> {{user.lastname}}</p>
                    <p><strong>Prénom :</strong> {{user.firstname}}</p>
                    <p><strong>{{ 'profile.show.email'|trans }} :</strong> {{user.email}}</p>
                    <p>
                        <strong>Rôles :</strong>
                        {% for role in user.roles %}
                            {% if role == "ROLE_ENSEIGNANT" %}
                                Enseignant
                            {% elseif role == "ROLE_ETUDIANT"  %}
                                Étudiant
                            {% elseif role == "ROLE_ADMIN"  %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </p>
                    {% if "ROLE_ENSEIGNANT" in user.roles %}
                        <p>
                            <strong>Vos UEs :</strong><br/>
                            {% for ue in user.ues %}
                                {{ ue.code ~' - '~ ue.nom }}<br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}